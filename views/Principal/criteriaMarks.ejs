<!DOCTYPE html>
<html lang="en">
<%- include("nav") %>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Grade Table</title>
    <style>
        body {
            background: linear-gradient(120deg, #3a7bd5 0%, #3a6073 100%);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
        }

        .container {
            width: 90%;
            margin: 20px auto;
            padding: 30px;
            background-color: rgba(255, 255, 255, 0.05);
            color: white;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
        }

        h2 {
            font-size: 28px;
            text-align: center;
            margin-bottom: 20px;
            color: #f2f2f2;
        }

        /* Table Styling */
        table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
            background-color: rgba(255, 255, 255, 0.05);
        }

        table, th, td {
            border: 1px solid black;
        }

        th, td {
            padding: 15px;
            text-align: center;
            border: 1px solid #ddd;
            color: #f0f0f0;
            font-size: 14px;
        }

        th {
            background-color: #3498db;
            color: #fff;
        }

        tbody tr:nth-child(even) {
            background-color: rgba(255, 255, 255, 0.1);
        }

        tbody tr:hover {
            background-color: rgba(255, 255, 255, 0.2);
        }

        /* Button Styling */
        .buttons-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 20px;
        }

        .pagination-buttons {
            text-align: center;
            margin: 20px 0;
        }

        button {
            background-color: #00fc1982;
            color: white;
            border: none;
            padding: 12px 20px;
            border-radius: 6px;
            cursor: pointer;
            font-size: 16px;
            transition: background-color 0.3s ease;
            margin: 0 10px;
        }

        button:hover {
            background-color: #2fd943;
        }

        /* Modal Styling */
        .modal {
            display: none;
            position: fixed;
            z-index: 9999;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.6);
            align-items: center;
            justify-content: center;
        }

        .modal-content {
            background-color: #fefefe;
            padding: 20px;
            border-radius: 10px;
            width: 90%;
            max-width: 400px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
            text-align: center;
        }

        .modal-header {
            font-size: 24px;
            margin-bottom: 15px;
        }

        .modal-buttons {
            display: flex;
            justify-content: space-around;
            margin-top: 20px;
        }

        .modal-buttons button {
            padding: 10px 15px;
        }

        @media (max-width: 768px) {
            button {
                width: 100%;
                margin: 10px 0;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Grade Table</h2>
        <h1>Appraisal Details</h1>
        <table>
            <thead>
                <tr>
                    <th>Criteria Name</th>
                    <th>Total Parameters</th>
                    <th>Total Marks</th>
                </tr>
            </thead>
            <tbody>
                <% if (criteriaData.length > 0) { %>
                    <% criteriaData.forEach(function(item) { %>
                        <tr>
                            <td><%= item.criteria_name %></td>
                            <td><%= item.total_parameters %></td>
                            <td><%= item.total_marks || 0 %></td>
                        </tr>
                    <% }); %>
                <% } else { %>
                    <tr>
                        <td colspan="3">No criteria found for this appraisal.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>

        <div class="buttons-container">
            <!-- Add Go to Grade Page Button -->
            
            <button id="goToGradeButton">Go to Grade Page</button>

        </div>

        <!-- Modal -->
        <div id="myModal" class="modal">
            <div class="modal-content">
                <div class="modal-header">Appraisal Cycle Created Successfully!</div>
                <p>Do you wish to add committee members?</p>
                <div class="modal-buttons">
                    <button id="yesButton">Yes</button>
                    <button id="noButton">No</button>
                </div>
            </div>
        </div>

        <script>
           
    var criteriaData = <%- JSON.stringify(criteriaData) %>;

            const modal = document.getElementById('myModal');
            const yesButton = document.getElementById('yesButton');
            const noButton = document.getElementById('noButton');
          

           
            yesButton.addEventListener('click', () => {
                modal.style.display = 'none';
                alert('Redirecting to add committee members...');
            });

            noButton.addEventListener('click', () => {
                modal.style.display = 'none';
            });

            // Close modal when clicking outside of it
            window.onclick = function(event) {
        if (event.target === modal) {
            modal.style.display = 'none';
        }
    }

    // Send appraisal_id and total_marks when going to the grade page
    const goToGradeButton = document.getElementById('goToGradeButton');
    goToGradeButton.addEventListener('click', () => {
    const appraisalId = "<%= appraisal_id %>" // Replace with the actual appraisal_id if dynamic
    const totalMarks = criteriaData.reduce((total, item) => total + (parseInt(item.total_marks) || 0), 0); // Calculate total marks
    const url = `/principal/grade?appraisal_id=${appraisalId}&total_marks=${totalMarks}`;
    window.location.href = url;
});
        </script>
    </div>
</body>
</html>
